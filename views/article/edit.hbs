<h1>Welcome to SoftUni Wiki!</h1>
<section>
    <h2>Edit article
        <div class="controls">
            {{#if isAdmin}}
            {{#unless article.lockedStatus}}
            <a href="/article/lock/{{article._id}}">Lock article</a>
            {{/unless}}
            {{#if article.lockedStatus}}
            <a href="/article/unlock/{{article._id}}">Unlock article</a>
            {{/if}}
            {{/if}}
        </div>
    </h2>
    <div class="spacer">
        <form method="POST">
            <input name="articleId" type="hidden" value="{{article._id}}">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="content">
                {{#each contents}}
                    {{this}}
                {{/each}}    
            </textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>