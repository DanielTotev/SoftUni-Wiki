<html lang="en">

<head>
	<meta charset="UTF-8">
	<title>Wiki</title>
	<link rel="stylesheet" href="/css/site.css">
</head>

<body>
	<div>
		<aside>
			<div class="center">
				<img class="logo" src="/img/logo.png" alt="logo">
			</div>

			<nav>
				<a href="/">Main Page</a>
				<a href="/article/latest">Latest Article</a>
				<a href="/article/all">All Articles</a>
				<form method="POST" action="/search">
					<input type="text" name="filter">
					<input type="submit" value="Search">
				</form>
				<a href="/article/create">Create New Article</a>
			</nav>
		</aside>
		<div id="container">
			<header>
				{{#unless currentUser }}
					<a href="/user/login">Login</a>
					<a href="/user/register">Register</a>
				{{/unless}}
				{{#if currentUser}}	
				<span>Welcome, {{currentUser.username}}!</span>
				<form id="logout-form" action="/user/logout" method="POST"></form>
				<a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
				{{/if}}
			</header>
			{{#if globalError}}
			<h3>{{globalError}}</h3>
			{{/if}}
			<main>
				{{{body}}}
			</main>
			<footer>
				SoftUni Wiki &copy; 2018
			</footer>
		</div>
	</div>
</body>
</html>